<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.MainPage"
             xmlns:local="clr-namespace:FitnessTracker.ViewModels">

    

    <ScrollView BackgroundColor="LightGrey">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            >
            <Image Source="workout2.webp"/>
            <Label Text="My Fitness Tracker" FontSize="Title" HorizontalTextAlignment="Center"/>
            <Button Text="Add Exercise" Clicked="OnAddButtonClicked"/>
            
            <Button Text="Display Exercises" Clicked="OnDisplayClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

